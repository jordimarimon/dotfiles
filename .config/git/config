[core]
	editor = nvim
	excludesfile = ~/.gitignore
	autocrlf = input
	compression = 0
	filemode = false
	pager = delta
	whitespace = error
[interactive]
	diffFilter = delta --color-only
[status]
	branch = true
	short = true
	showStash = true
	showUntrackedFiles = all
[delta]
	navigate = true
	light = true
	line-numbers = true
	side-by-side = false
	inspect-raw-lines = false
[ssh]
	postBuffer = 1048576000
[http]
	postBuffer = 500M
	maxRequestBuffer = 100M
[user]
	email = jordimarimon7@gmail.com
	name = Jordi Marimon
[alias]
	alias="!git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ / | grep -v ^'alias ' | sort"
	a="add"
	afz="!git ls-files -m -o --exclude-standard | fzf --print0 -m | xargs -0 -t -o git add"
	aa="add -A"
	b="branch"
	bd="!f() { git branch -d \"$1\" && git push --delete origin \"$1\"; }; f"
	bdp="!f() { pb=$(git rev-parse --abbrev-ref @{-1} 2>/dev/null) && [ -n \"$pb\" ] && git branch -d \"$pb\" && git push --delete origin \"$pb\" || echo \"No previous branch exists.\"; }; f"
	c="commit"
	ca="commit --amend"
	ce="commit --amend --no-edit"
	cl="config --list"
	cle="clean -dxf"
	users="shortlog --summary --numbered --email"
	d="diff"
	ds="diff --staged"
	dc="diff --check"
	dt="diff-tree --no-commit-id --name-only -r"
	f="fetch"
	fp="fetch --prune"
	l="!. ~/Scripts/githelpers.sh && pretty_git_log"
	la="log --all --format=fuller"
	m="merge --no-ff"
	mf="merge"
	pu="push"
	puf="push --force-with-lease"
	pl="pull --prune"
	ruf="!. ~/Scripts/githelpers.sh && remove_untracked_files"
	rs="restore"
	rb="rebase"
	rss="restore --staged"
	st="status"
	sh="show"
	sl="stash list"
	sd="stash drop"
	spu="stash push"
	sspu="stash push --staged"
	spo="stash pop"
	sw="switch"
	swc="switch -c"
	first="!git rev-list --max-parents=0 HEAD | xargs git show -s --format=%ai"
[push]
	default = current
	followTags = true
	autoSetupRemote = true
[init]
	defaultBranch = main
[pull]
	default = current
	rebase = true
[rebase]
	autoStash = true
	missingCommitsCheck = warn
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
