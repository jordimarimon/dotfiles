[core]
	editor = nvim
	excludesfile = ~/.gitignore
	autocrlf = input
	compression = 0
	filemode = false
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	light = true
	line-numbers = true
	side-by-side = true
[ssh]
	postBuffer = 1048576000
[http]
	postBuffer = 500M
	maxRequestBuffer = 100M
[user]
	email =
	name =
[alias]
	log-prettier = log --graph --abbrev-commit --decorate --format=format:'%C(bold green)%h%C(reset) - %C(bold black)%aD%C(reset) %C(bold black)(%ar)%C(reset)%C(bold blue)%d%C(reset)%n''%C(black)%s%C(reset) %C(black)- %an%C(reset)' --all
[push]
	default = simple
	followTags = true
	autoSetupRemote = true
[init]
	defaultBranch = main
[pull]
	rebase = true
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default

